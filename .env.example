# AstraLearn AI Environment Configuration

# =============================================================================
# Application Settings
# =============================================================================
ENVIRONMENT=development
LOG_LEVEL=INFO
APP_NAME=AstraLearn AI
APP_VERSION=0.1.0

# =============================================================================
# Database Configuration
# =============================================================================

# PostgreSQL
DATABASE_URL=postgresql://astralearn:changeme@localhost:5432/astralearn
POSTGRES_USER=astralearn
POSTGRES_PASSWORD=changeme
POSTGRES_DB=astralearn

# MongoDB
MONGODB_URL=mongodb://astralearn:changeme@localhost:27017
MONGO_INITDB_ROOT_USERNAME=astralearn
MONGO_INITDB_ROOT_PASSWORD=changeme

# Redis
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Milvus Vector Database
MILVUS_HOST=localhost
MILVUS_PORT=19530

# =============================================================================
# AI & ML Configuration
# =============================================================================

# OpenAI API
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4
OPENAI_EMBEDDING_MODEL=text-embedding-ada-002

# Agent Configuration
AGENT_MAX_WORKERS=5
AGENT_TIMEOUT_SECONDS=300

# =============================================================================
# Security Configuration
# =============================================================================

# JWT Authentication
JWT_SECRET_KEY=your_jwt_secret_key_here_change_in_production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Password Hashing
BCRYPT_ROUNDS=12

# =============================================================================
# API Configuration
# =============================================================================

# CORS Settings
CORS_ORIGINS=http://localhost:5173,http://localhost:3000
CORS_ALLOW_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# =============================================================================
# Frontend Configuration
# =============================================================================

VITE_API_URL=http://localhost:8000
VITE_WS_URL=ws://localhost:8000
VITE_APP_NAME=AstraLearn AI

# =============================================================================
# Storage Configuration
# =============================================================================

# File Upload
MAX_UPLOAD_SIZE_MB=10
ALLOWED_EXTENSIONS=txt,pdf,docx,jpg,jpeg,png

# S3 / Object Storage (Optional)
# S3_BUCKET=astralearn-content
# S3_REGION=us-east-1
# AWS_ACCESS_KEY_ID=your_access_key
# AWS_SECRET_ACCESS_KEY=your_secret_key

# =============================================================================
# Monitoring & Logging (Optional)
# =============================================================================

# Sentry
# SENTRY_DSN=

# New Relic
# NEW_RELIC_LICENSE_KEY=

# =============================================================================
# Email Configuration (Optional)
# =============================================================================

# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@example.com
# SMTP_PASSWORD=your_email_password
# EMAIL_FROM=noreply@astralearn.ai

# =============================================================================
# External Services (Optional)
# =============================================================================

# Analytics
# GOOGLE_ANALYTICS_ID=

# Payment Processing
# STRIPE_SECRET_KEY=
# STRIPE_PUBLISHABLE_KEY=

# =============================================================================
# Development Settings
# =============================================================================

DEBUG=false
RELOAD=true
HOT_RELOAD=true

# =============================================================================
# Notes
# =============================================================================
# 
# IMPORTANT: 
# - Change all default passwords and secret keys in production!
# - Never commit this file with real credentials to version control
# - Use environment-specific .env files (.env.development, .env.production)
# - Consider using a secrets manager (AWS Secrets Manager, HashiCorp Vault, etc.)
#
